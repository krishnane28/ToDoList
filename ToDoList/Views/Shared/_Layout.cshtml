<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TODO App</title>
    <!-- TODO App CSS -->
    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body style="padding-bottom: 60px; padding-top: 60px;">
    <!-- Fixed Top Navigation Bar -->
    <nav class="navbar navbar-inverse navbar-fixed-top" style="color: white; text-align: center;">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#appNavBar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TODO App", "About", "Home", null, new  {
                                                                            @class = "navbar-brand text-center center-block",
                                                                            style = "color: white;"
                                                                         })
            </div>
            <div id="appNavBar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("LOGIN", "Login", "Login", null, new   {
                                                                                    id = "loginLink",
                                                                                    style = "color: white;"
                                                                                })
                    </li>
                    <li>
                        @Html.ActionLink("LOGOFF", "Logout", "ToDos", null, new {
                                                                                    id = "logoffLink",
                                                                                    style = "color: white; display: none;",
                                                                                })
                    </li>
                </ul>
            </div>            
        </div>
    </nav>
    <!-- Fixed Top Navigation Bar -->

    <!-- View Specific Content -->
    <div id="viewContent" class="container-fluid">
        @RenderBody()
    </div>
    <!-- View Specific Content -->

    <!-- Fixed Bottom Navigation Bar -->
    <nav class="navbar navbar-inverse navbar-fixed-bottom" style="text-align: center;display: grid; color: white;">
        &copy; Murali Krishnan
    </nav>
    <!-- Fixed Bottom Navigation Bar-->

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- TODO App Script -->
    @RenderSection("ToDoAppScript", required: false)
    @*RenderSection("ModalCloseScript", required: false)*@
    @RenderSection("ToggleLoginLink", required: false)
    @RenderSection("ToggleLoginLinkFromLoginPage", required: false)
</body>
</html>
